generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./library.db"
}

model Source {
  id        String   @id @default(uuid())
  name      String
  type      String   // "ssh" or "smb"
  host      String
  port      Int?
  username  String?
  password  String?  // encrypted in production
  share     String?  // for SMB
  basePath  String   @default("/")
  enabled   Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tracks    Track[]
  status    SourceStatus?
}

model SourceStatus {
  id           String    @id @default(uuid())
  sourceId     String    @unique
  source       Source    @relation(fields: [sourceId], references: [id])
  status       String    @default("idle") // idle, scanning, complete, error
  progress     Float     @default(0)
  totalFiles   Int       @default(0)
  scannedFiles Int       @default(0)
  lastError    String?
  lastScan     DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model Artist {
  id        String   @id @default(uuid())
  name      String   @unique
  imageUrl  String?
  createdAt DateTime @default(now())
  albums    Album[]
  tracks    Track[]
}

model Album {
  id        String   @id @default(uuid())
  name      String
  artistId  String
  artist    Artist   @relation(fields: [artistId], references: [id])
  year      Int?
  imageUrl  String?
  createdAt DateTime @default(now())
  tracks    Track[]
  
  @@unique([name, artistId])
}

model Track {
  id          String   @id @default(uuid())
  title       String
  artistId    String?
  artist      Artist?  @relation(fields: [artistId], references: [id])
  albumId     String?
  album       Album?   @relation(fields: [albumId], references: [id])
  folderPath  String?  // the directory path (for the "Folders" view)
  trackNumber Int?
  duration    Int?     // seconds
  path        String   // path on the source
  sourceId    String
  source      Source   @relation(fields: [sourceId], references: [id])
  size        Int?     // file size in bytes
  format      String?  // mp3, flac, etc.
  bitrate     Int?
  sampleRate  Int?
  imageUrl    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  playlistItems PlaylistItem[]
  
  @@unique([sourceId, path])
}

model Playlist {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now())
  items     PlaylistItem[]
}

model PlaylistItem {
  id         String   @id @default(uuid())
  playlistId String
  playlist   Playlist @relation(fields: [playlistId], references: [id])
  trackId    String
  track      Track    @relation(fields: [trackId], references: [id])
  position   Int
  addedAt    DateTime @default(now())
}