generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./library.db"
}

model Source {
  id        String        @id @default(uuid())
  name      String
  type      String
  host      String
  port      Int?
  username  String?
  password  String?
  domain    String?       @default(".")
  share     String?
  basePath  String        @default("/")
  enabled   Boolean       @default(true)
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  status    SourceStatus?
  tracks    Track[]
}

model SourceStatus {
  id           String    @id @default(uuid())
  sourceId     String    @unique
  status       String    @default("idle")
  progress     Float     @default(0)
  totalFiles   Int       @default(0)
  scannedFiles Int       @default(0)
  lastError    String?
  lastScan     DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  source       Source    @relation(fields: [sourceId], references: [id])
}

model Artist {
  id        String   @id @default(uuid())
  name      String   @unique
  imageUrl  String?
  createdAt DateTime @default(now())
  albums    Album[]
  tracks    Track[]
}

model Album {
  id        String   @id @default(uuid())
  name      String
  artistId  String
  year      Int?
  imageUrl  String?
  createdAt DateTime @default(now())
  artist    Artist   @relation(fields: [artistId], references: [id])
  tracks    Track[]

  @@unique([name, artistId])
}

model Track {
  id          String   @id @default(uuid())
  title       String
  artistId    String?
  albumId     String?
  folderPath  String?
  trackNumber Int?
  duration    Int?
  path        String
  sourceId    String
  size        Int?
  format      String?
  bitrate     Int?
  sampleRate  Int?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  imageUrl    String?
  source      Source   @relation(fields: [sourceId], references: [id])
  album       Album?   @relation(fields: [albumId], references: [id])
  artist      Artist?  @relation(fields: [artistId], references: [id])
  playlists   PlaylistItem[]

  @@unique([sourceId, path])
}

model Playlist {
  id        String         @id @default(uuid())
  name      String
  createdAt DateTime       @default(now())
  items     PlaylistItem[]
}

model PlaylistItem {
  id         String   @id @default(uuid())
  playlistId String
  trackId    String
  position   Int
  addedAt    DateTime @default(now())
  playlist   Playlist @relation(fields: [playlistId], references: [id])
  track      Track    @relation(fields: [trackId], references: [id])
}
